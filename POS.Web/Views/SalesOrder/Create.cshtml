@* File: Views/SalesOrder/Create.cshtml *@
@model POS.DTOs.CreateSalesOrderDTO

@{
    ViewData["Title"] = "Crear Orden de Venta";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-shopping-cart"></i> Crear Orden de Venta
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form id="salesOrderForm" asp-action="Create" method="post">
                        <input type="hidden" asp-for="CustomerId" id="customerId" />

                        <!-- Header Info -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card border-primary shadow-sm">
                                    <div class="card-body bg-light">
                                        <div class="row align-items-center">
                                            <div class="col-md-4">
                                                <h4 class="mb-0">
                                                    <i class="fas fa-file-invoice text-primary"></i>
                                                    <strong>Orden de Venta:</strong>
                                                    <span id="orderNumberDisplay" class="text-muted">Cargando...</span>
                                                </h4>
                                                <p class="mb-0 mt-2">
                                                    <i class="fas fa-calendar-alt text-primary"></i>
                                                    <strong>Fecha:</strong>
                                                    <span id="orderDate" class="text-muted">Cargando...</span>
                                                </p>
                                            </div>
                                            <div class="col-md-8 text-end">
                                                <h5 class="mb-1 text-primary"><i class="fas fa-mobile-alt"></i> <strong>CellExpress - Tecnología Móvil</strong></h5>
                                                <p class="mb-0 small"><i class="fas fa-map-marker-alt"></i> Av. Cevallos 18-45 y Montalvo, Centro de Ambato, Ecuador</p>
                                                <p class="mb-0 small"><i class="fas fa-id-badge"></i> RUC: 1803456789001 | <i class="fas fa-phone"></i> (03) 282-5647</p>
                                                <p class="mb-0 small"><i class="fab fa-whatsapp"></i> +593 98 456 7890 | <i class="fas fa-envelope"></i> info@cellexpress.ec</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Left Column: Products (Main Area) -->
                            <div class="col-lg-8">
                                <div class="card shadow mb-4" style="min-height: 500px;">
                                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0"><i class="fas fa-box-open"></i> Artículos de la Orden</h5>
                                        <button type="button" class="btn btn-light btn-sm" id="btnAddProduct">
                                            <i class="fas fa-plus"></i> Agregar Producto
                                        </button>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover" id="orderItemsTable">
                                                <thead class="table-dark">
                                                    <tr>
                                                        <th style="width: 15%;">Código</th>
                                                        <th style="width: 30%;">Producto</th>
                                                        <th style="width: 12%;">Precio</th>
                                                        <th style="width: 12%;">Cant.</th>
                                                        <th style="width: 15%;">Total</th>
                                                        <th style="width: 16%;">Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="orderItemsBody">
                                                    <tr id="emptyRow">
                                                        <td colspan="6" class="text-center text-muted py-5">
                                                            <div class="display-1 text-muted opacity-25 mb-3"><i class="fas fa-shopping-basket"></i></div>
                                                            <h5>No hay productos en la lista</h5>
                                                            <p>Agregue artículos para comenzar la venta</p>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <span asp-validation-for="OrderDetails" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column: Customer & Totals -->
                            <div class="col-lg-4">
                                <!-- Customer Section -->
                                <div class="card shadow mb-4">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="mb-0"><i class="fas fa-user"></i> Datos del Cliente</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Cliente <span class="text-danger">*</span></label>
                                            <div class="input-group mb-3">
                                                <input type="text" id="customerDisplay" class="form-control"
                                                       placeholder="Seleccionar cliente..." readonly />
                                                <button type="button" class="btn btn-primary" id="btnSearchCustomer">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                                        </div>
                                        <!-- New Customer Card Container -->
                                        <div id="newCustomerCardWrapper"></div>
                                    </div>
                                </div>

                                <!-- Totals Section -->
                                <div class="card shadow mb-4">
                                    <div class="card-header bg-warning text-dark">
                                        <h5 class="mb-0"><i class="fas fa-calculator"></i> Totales</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Subtotal:</span>
                                            <span class="fw-bold" id="subtotalDisplay">$0.00</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Impuesto (15%):</span>
                                            <span class="fw-bold" id="taxDisplay">$0.00</span>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="h5 mb-0">Total a Pagar:</span>
                                            <span class="h3 mb-0 text-primary fw-bold" id="totalDisplay">$0.00</span>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label asp-for="Notes" class="form-label small">Observaciones</label>
                                            <textarea asp-for="Notes" class="form-control form-control-sm" rows="2"
                                                      placeholder="Notas de la venta..."></textarea>
                                        </div>

                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-success btn-lg" id="btnSubmitOrder">
                                                <i class="fas fa-check-circle"></i> Procesar Venta
                                            </button>
                                            <a asp-action="Search" class="btn btn-outline-secondary">
                                                <i class="fas fa-times"></i> Cancelar
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Customer Search Modal -->
<div class="modal fade" id="customerSearchModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-users"></i> Buscar Cliente
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="customerSearchInput" class="form-control"
                               placeholder="Buscar por nombre, cédula o email..."
                               autocomplete="off" />
                    </div>
                    <small class="text-muted">
                        <i class="fas fa-info-circle"></i>
                        Comience a escribir para filtrar resultados en tiempo real
                    </small>
                </div>
                <div id="customerSearchResults">
                    <!-- Results will be loaded here -->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Product Search Modal -->
<div class="modal fade" id="productSearchModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="fas fa-box"></i> Buscar Producto
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="productSearchInput" class="form-control"
                               placeholder="Buscar por código o nombre..."
                               autocomplete="off" />
                    </div>
                    <small class="text-muted">
                        <i class="fas fa-info-circle"></i>
                        Comience a escribir para filtrar resultados en tiempo real
                    </small>
                </div>
                <div id="productSearchResults">
                    <!-- Results will be loaded here -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/sales-order-create.js"></script>
}